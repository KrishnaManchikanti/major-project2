
<%for(let i of posts){%> 
    <li id="post-<%=i.id %>">
    <%if (locals.user && locals.user.id == i.user.id){%>
        <small>
            <a class='delete-post-button' href="/posts/destroy/<%=i.id%>">X</a>
        </small>
    <%}%>

    <%= i.content%>
    <small>
        <!-- the id in the user(post) is replaced by actual user -->
        <%= i.user.email%>
    </small>

    <small>
        <% if(locals.user){%>
            <a class="toogle-like-button" data-likes="<%=post.likes.length%>" href="/likes/toggle/?id=<%=post._id%>&type=Post" >
                <%=post.likes.length %> Likes
            </a>

        <%}else{%>
            <%=post.likes.length %> Likes
        <%} %>
    </small>

    <div class="post-comments">
        
        <%if(locals.user){%>
            <form action="/comments/create" id="new-comment-form" method="POST">
                <input type="text" name="content" placeholder="add comment.." required>
                <input type="hidden" name="post" value="<%= i._id %>">
                <input type="submit" value="add comment">
            </form>
        <%}%>
        
        <div class="post-comments-list">
            
            <ul id="post-comments-<%=i._id%>">
            
                <%for(let comments of i.comments){%>
                    <p>
                       
                        <li><%= comments.content%></li>
                        <small><%=comments.user.email%></small>
                        
                        <%if (locals.user && (locals.user.id == comments.user.id || i.user.id == locals.user.id)){%>
                        <small><a href="/comments/destroy/<%=comments.id%>">X</a></small>
                        <%}%>
                    </p>
                <%}%>

                <small>
                    <% if(locals.user){%>
                        <a class="toogle-like-button" data-likes="<%=comment.likes.length%>" href="/likes/toggle/?id=<%=cooment._id%>&type=Comment" >
                            <%=comment.likes.length %> Likes
                        </a> 
            
                    <%}else{%>
                        <%=comment.likes.length %> Likes
                    <%} %>
                </small>
            
            </ul>
        </div>
</div>
</li>
<%}%>
