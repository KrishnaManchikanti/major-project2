<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-posts">
            <h4>Posts</h4>
            <% if(locals.user){ %>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
                <input type="submit" value="Post">
            </form>
            <% } %>
        
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                        
                    <%- include('_post') -%>
                        
                    <%} %>
                </ul>
            </div>
        </section>
        <div id="aside">
            <section id="list-of-friends">
                
                <% if(locals.user){ %>
                    <h4>Friends</h4>
                    <!-- <%=user.friendships%> -->
                    <%for(let i=0; i<all_users.length;i++){%>
                        <%if(all_users[i].id==user.id){%>
                            <%for(let j=0; j<all_users.length;j++){%>
                                <a  id="changebutton" href="/users/add-friend/?from_user=<%=user.id%>&to_user=<%= %>">X</a>
                                <%=all_users[i].friendships[j]%>
                            <%} %>
                        <%} %>
                    <% } %> 
                <% } %>
               
            </section>
    
            <section id="list-of-users">
                <h4>Users</h4>
                <% for(u of all_users){%>
                    <p>
                        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                    </p>
                <% } %>
            </section>
        </div>
        

        
</div>

